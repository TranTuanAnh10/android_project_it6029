<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="8dp" /> <!-- Bo góc nhẹ -->

    <!-- Màu nền trắng (hoặc trong suốt), sau đó code Java sẽ thay đổi màu này
         hoặc dùng nó làm viền nổi bật. -->
    <solid android:color="@android:color/transparent" />

    <!-- Thêm viền nhẹ để định hình (ví dụ: viền xám nhạt) -->
    <stroke android:width="1dp" android:color="#E5E7EB" />

    <!-- Kích thước mặc định nếu cần (dù đã được xác định trong layout) -->
    <size
        android:width="40dp"
        android:height="40dp" />
</shape>