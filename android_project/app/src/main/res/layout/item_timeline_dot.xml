<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:showIn="@layout/order_detail_screen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Dot/Icon -->
        <ImageView
            android:id="@+id/timeline_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_picking_up_order"
            tools:ignore="ContentDescription" />

        <!-- Line (Nếu không phải bước cuối) -->
        <View
            android:id="@+id/timeline_line"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#CCCCCC" />
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/timeline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picking up"
            android:textColor="#343434"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/timeline_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver is picking up your Order."
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
