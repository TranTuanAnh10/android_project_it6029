<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_delivery_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery options"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group_delivery_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_header">

        <!-- LƯU Ý: bg_delivery_option_selector phải có khả năng đổi màu nền khi selected/checked -->
        <!-- Option 1: Standard Delivery -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_standard_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_delivery_option_selector"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Checkbox ẩn text, chỉ dùng cho logic chọn -->
            <CheckBox
                android:id="@+id/rb_standard_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Icon (Giả sử: ic_delivery_truck) -->
            <ImageView
                android:id="@+id/iv_standard_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="36dp"
                android:src="@drawable/ic_delivery_truck"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text Description -->
            <TextView
                android:id="@+id/tv_standard_delivery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/standard_delivery"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@+id/iv_standard_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Time -->
            <TextView
                android:id="@+id/tv_standard_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="10:00"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Option 2: Schedule Order (có thể bung ra) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_schedule_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_delivery_option_selector"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <!-- Header (Radio/Checkbox, Icon, Text, Dropdown) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/schedule_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/rb_schedule_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Icon (Giả sử: ic_schedule_clock) -->
                <ImageView
                    android:id="@+id/iv_schedule_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="36dp"
                    android:src="@drawable/ic_schedule_clock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription" />

                <!-- Text Description -->
                <TextView
                    android:id="@+id/tv_schedule_order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/schedule_order"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@+id/iv_schedule_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />


                <ImageView
                    android:id="@+id/iv_schedule_dropdown"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Content (Schedule Time Selection) -->
            <LinearLayout
                android:id="@+id/schedule_time_selection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/schedule_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery after:"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Icon Thêm (Dấu +) -->
                        <ImageView
                            android:id="@+id/iv_add_time_schedule"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_chip_border"
                            android:src="@drawable/ic_plus"
                            android:contentDescription="Add time" />

                        <!-- Chips -->
                        <TextView
                            android:id="@+id/tv_schedule_15min"
                            style="@style/TimeChip"
                            android:layout_marginStart="8dp"
                            android:text="15 min"
                            android:background="@drawable/bg_time_chip_selected"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_schedule_30min"
                            style="@style/TimeChip"
                            android:layout_marginStart="8dp"
                            android:text="30 min"
                            android:background="@drawable/bg_time_chip_default"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_schedule_45min"
                            style="@style/TimeChip"
                            android:layout_marginStart="8dp"
                            android:text="45 min"
                            android:background="@drawable/bg_time_chip_default"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_schedule_1hour"
                            style="@style/TimeChip"
                            android:layout_marginStart="8dp"
                            android:text="1 hour"
                            android:background="@drawable/bg_time_chip_default"
                            android:textColor="@android:color/black" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Option 3: Pick up Order (có thể bung ra) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_pick_up_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_delivery_option_selector"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <!-- Header (Radio/Checkbox, Icon, Text, Dropdown) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pickup_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/rb_pick_up_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Icon (Giả sử: ic_pickup_box) -->
                <ImageView
                    android:id="@+id/iv_pickup_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="36dp"
                    android:src="@drawable/ic_pickup_box"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription" />

                <!-- Text Description -->
                <TextView
                    android:id="@+id/tv_pickup_order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/pick_up_order"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@+id/iv_pickup_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/iv_pickup_dropdown"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Content (Pick up Time Selection) -->
            <LinearLayout
                android:id="@+id/pickup_time_selection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/pickup_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_your_pick_up_time"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Icon Thêm (Dấu +) -->
                        <ImageView
                            android:id="@+id/iv_add_time_pickup"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_chip_border"
                            android:src="@drawable/ic_plus"
                            android:contentDescription="Add time" />

                        <!-- Chips -->
                        <TextView
                            android:id="@+id/tv_pickup_1000"
                            style="@style/TimeChip"
                            android:layout_marginStart="8dp"
                            android:text="10:00"
                            android:background="@drawable/bg_time_chip_selected"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_pickup_1030"
                            style="@style/TimeChip"
                            android:layout_marginStart="8dp"
                            android:text="10:30"
                            android:background="@drawable/bg_time_chip_default"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_pickup_1100"
                            style="@style/TimeChip"
                            android:layout_marginStart="8dp"
                            android:text="11:00"
                            android:background="@drawable/bg_time_chip_default"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_pickup_1130"
                            style="@style/TimeChip"
                            android:layout_marginStart="8dp"
                            android:text="11:30"
                            android:background="@drawable/bg_time_chip_default"
                            android:textColor="@android:color/black" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>