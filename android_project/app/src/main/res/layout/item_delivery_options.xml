<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_delivery_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery options"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group_delivery_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_standard_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_delivery_option_selector">

            <RadioButton
                android:id="@+id/rb_standard_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard Delivery"
                android:textSize="16sp"
                android:checked="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_standard_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_schedule_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_delivery_option_selector">

            <RadioButton
                android:id="@+id/rb_schedule_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Order"
                android:textSize="16sp"
                android:checked="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_schedule_dropdown"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:contentDescription="Dropdown Arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rb_schedule_order"
                app:layout_constraintBottom_toBottomOf="@+id/rb_schedule_order" />

            <LinearLayout
                android:id="@+id/schedule_time_selection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/rb_schedule_order"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery after:"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_schedule_15min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="15 min"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_time_chip_selected"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_schedule_30min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="30 min"
                            android:textColor="@android:color/black"
                            android:background="@drawable/bg_time_chip_default"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_schedule_45min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="45 min"
                            android:textColor="@android:color/black"
                            android:background="@drawable/bg_time_chip_default"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_schedule_1hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="1 hour"
                            android:textColor="@android:color/black"
                            android:background="@drawable/bg_time_chip_default"
                            android:textSize="16sp" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_pick_up_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_delivery_option_selector">

            <RadioButton
                android:id="@+id/rb_pick_up_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick up Order"
                android:textSize="16sp"
                android:checked="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_pickup_dropdown"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:contentDescription="Dropdown Arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rb_pick_up_order"
                app:layout_constraintBottom_toBottomOf="@+id/rb_pick_up_order" />

            <LinearLayout
                android:id="@+id/pickup_time_selection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/rb_pick_up_order"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select your pick up time"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_add_time_pickup"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_rounded_border"
                            android:src="@drawable/ic_location_poin"
                            android:contentDescription="Add time" />

                        <TextView
                            android:id="@+id/tv_pickup_1000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="10:00"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_time_chip_selected"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_pickup_1030"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="10:30"
                            android:textColor="@android:color/black"
                            android:background="@drawable/bg_time_chip_default"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_pickup_1100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="11:00"
                            android:textColor="@android:color/black"
                            android:background="@drawable/bg_time_chip_default"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_pickup_1130"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="11:30"
                            android:textColor="@android:color/black"
                            android:background="@drawable/bg_time_chip_default"
                            android:textSize="16sp" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>