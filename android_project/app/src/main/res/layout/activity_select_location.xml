<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_location_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.SelectLocationActivity"
    android:background="@drawable/rounded_edittext_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:text="Select your location"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSearchAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext_bg"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:ellipsize="none"
        android:hint="Search your address"
        android:inputType="textCapSentences|textMultiLine"
        android:maxEms="30"
        android:maxLines="5"
        android:overScrollMode="never"
        android:padding="12dp"
        android:scrollHorizontally="false"
        android:singleLine="false" />


    <Button
        android:id="@+id/btnUseMyLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use your location"
        android:textColor="#EB4D57"
        android:backgroundTint="@color/md_theme_onSecondary"
        android:layout_marginTop="12dp"
        app:icon="@drawable/ic_location_poin"
        app:iconPadding="8dp"
        app:iconGravity="textStart" />

    <TextView
        android:id="@+id/tvRecent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Recent search"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listRecent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:padding="4dp"
        android:clipToPadding="false"
        android:background="@android:color/transparent" />


    <LinearLayout
        android:id="@+id/btnChooseFromMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FBDBDD"
        android:background="@drawable/bg_address_item"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location"
            app:tint="#EB4D57" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Choose from Map"
            android:textColor="#EB4D57"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
