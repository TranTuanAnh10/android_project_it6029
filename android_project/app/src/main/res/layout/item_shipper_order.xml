<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/md_theme_surfaceContainer"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/md_theme_outlineVariant"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_avatar_circle"
            android:backgroundTint="@color/md_theme_surfaceContainerHigh"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_myplaces"
            app:tint="@color/md_theme_primary" />

        <TextView
            android:id="@+id/label_receiver_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Người nhận"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/img_avatar"
            app:layout_constraintTop_toTopOf="@id/img_avatar" />

        <TextView
            android:id="@+id/text_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dai hoc"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/label_receiver_title"
            app:layout_constraintTop_toBottomOf="@id/label_receiver_title" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_success"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Đã xong"
            android:textColor="#00C853"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_avatar"
            app:srcCompat="@android:drawable/ic_menu_call"
            app:tint="@color/md_theme_onSurfaceVariant" />

        <TextView
            android:id="@+id/label_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Số điện thoại"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/icon_phone"
            app:layout_constraintTop_toTopOf="@id/icon_phone" />

        <TextView
            android:id="@+id/tv_receiver_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0987654321"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/label_phone"
            app:layout_constraintTop_toBottomOf="@id/label_phone" />

        <ImageView
            android:id="@+id/icon_address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_receiver_phone"
            app:srcCompat="@android:drawable/ic_dialog_map"
            app:tint="@color/md_theme_onSurfaceVariant" />

        <TextView
            android:id="@+id/label_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Địa chỉ"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/icon_address"
            app:layout_constraintTop_toTopOf="@id/icon_address" />

        <TextView
            android:id="@+id/text_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Trường Đại học Công nghiệp Hà Nội, 298, Đường Cầu Diễn, Hanoi, 34000, Vietnam"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/label_address"
            app:layout_constraintTop_toBottomOf="@id/label_address" />

        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_address"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            app:tint="@color/md_theme_onSurfaceVariant" />

        <TextView
            android:id="@+id/label_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Ngày giao"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/icon_date"
            app:layout_constraintTop_toTopOf="@id/icon_date" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01/12/2025"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/label_date"
            app:layout_constraintTop_toBottomOf="@id/label_date" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:background="@color/md_theme_outlineVariant"
            app:layout_constraintTop_toBottomOf="@id/text_date" />

        <TextView
            android:id="@+id/tv_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Xem chi tiết →"
            android:textColor="@color/md_theme_onPrimary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>