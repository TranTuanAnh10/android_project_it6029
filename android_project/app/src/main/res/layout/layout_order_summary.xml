<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <!-- Header -->
    <TextView
        android:text="Order Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Delivery info -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_status_tag_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:textColor="#444444"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status_desc_tag_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_badge"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_estimate_time_summary"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_order_id_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#343434"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Timeline Steps -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp">

        <!-- STEP 1 -->
        <ImageView
            android:id="@+id/step_prepared_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_prepared_order"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prepared"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/step_prepared_summary"
            app:layout_constraintStart_toStartOf="@id/step_prepared_summary"
            app:layout_constraintEnd_toEndOf="@id/step_prepared_summary"
            android:gravity="center" />

        <!-- STEP 2 -->
        <ImageView
            android:id="@+id/step_pickingUp_summary"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_picking_up_order"
            app:layout_constraintTop_toTopOf="@id/step_prepared_summary"
            app:layout_constraintStart_toEndOf="@id/step_prepared_summary"
            android:layout_marginStart="64dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickingUp"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/step_pickingUp_summary"
            app:layout_constraintStart_toStartOf="@id/step_pickingUp_summary"
            app:layout_constraintEnd_toEndOf="@id/step_pickingUp_summary"
            android:gravity="center" />

        <!-- STEP 3 -->
        <ImageView
            android:id="@+id/step_delivering_summary"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delivering_order"
            app:layout_constraintTop_toTopOf="@id/step_prepared_summary"
            app:layout_constraintStart_toEndOf="@id/step_pickingUp_summary"
            android:layout_marginStart="64dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivering"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/step_delivering_summary"
            app:layout_constraintStart_toStartOf="@id/step_delivering_summary"
            app:layout_constraintEnd_toEndOf="@id/step_delivering_summary"
            android:gravity="center" />

        <!-- STEP 4 -->
        <ImageView
            android:id="@+id/step_finish_summary"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_finish_order"
            app:layout_constraintTop_toTopOf="@id/step_prepared_summary"
            app:layout_constraintStart_toEndOf="@id/step_delivering_summary"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="64dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_step4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/step_finish_summary"
            app:layout_constraintStart_toStartOf="@id/step_finish_summary"
            app:layout_constraintEnd_toEndOf="@id/step_finish_summary"
            android:gravity="center" />

        <!-- Lines -->
        <View
            android:id="@+id/step_pickingUp_summary_line"
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="#CCCCCC"
            app:layout_constraintStart_toEndOf="@id/step_prepared_summary"
            app:layout_constraintEnd_toStartOf="@id/step_pickingUp_summary"
            app:layout_constraintTop_toTopOf="@id/step_prepared_summary"
            app:layout_constraintBottom_toBottomOf="@id/step_prepared_summary" />

        <View
            android:id="@+id/step_delivering_summary_line"
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="#CCCCCC"
            app:layout_constraintStart_toEndOf="@id/step_pickingUp_summary"
            app:layout_constraintEnd_toStartOf="@id/step_delivering_summary"
            app:layout_constraintTop_toTopOf="@id/step_pickingUp_summary"
            app:layout_constraintBottom_toBottomOf="@id/step_pickingUp_summary" />

        <View
            android:id="@+id/step_finish_summary_line"
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="#CCCCCC"
            app:layout_constraintStart_toEndOf="@id/step_delivering_summary"
            app:layout_constraintEnd_toStartOf="@id/step_finish_summary"
            app:layout_constraintTop_toTopOf="@id/step_delivering_summary"
            app:layout_constraintBottom_toBottomOf="@id/step_delivering_summary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginBottom="8dp" />

    <!-- Driver Info -->
    <TextView
        android:text="Driver info"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_driver_name_summary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_license_plate_summary"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_single_action"
            android:layout_marginEnd="24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_single_action_phone"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <!-- Order Info -->
    <TextView
        android:text="Order info"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/img_banh_mi_cha_ca"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Pizzeria da Giuseppe"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="2 items"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_total_value_summary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#E74C3C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
