<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Ảnh Voucher Preview -->
        <ImageView
            android:id="@+id/img_voucher_preview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_voucher_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="SUMMER2024"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/color_text_home_page_black"
            app:layout_constraintEnd_toStartOf="@+id/tv_status"
            app:layout_constraintStart_toEndOf="@+id/img_voucher_preview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_voucher_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giảm giá mùa hè"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_voucher_code"
            app:layout_constraintTop_toBottomOf="@+id/tv_voucher_code" />

        <!-- MỚI: Thêm phần Mô tả -->
        <TextView
            android:id="@+id/tv_voucher_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Áp dụng cho đơn hàng từ 200k trở lên..."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_voucher_code"
            app:layout_constraintTop_toBottomOf="@+id/tv_voucher_name" />

        <TextView
            android:id="@+id/tv_discount_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giảm 20%"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_voucher_code"
            app:layout_constraintTop_toBottomOf="@+id/tv_voucher_description" />

        <TextView
            android:id="@+id/tv_expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HSD: 30/12/2024"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/tv_voucher_code"
            app:layout_constraintTop_toBottomOf="@+id/tv_discount_info" />

        <!-- Trạng thái (Còn hạn / Hết hạn) -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
